<UserControl x:Class="Yomiage.GUI.Dialog.Views.PresetFilterDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yomiage.GUI.Dialog.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Margin="3">
            <Button DockPanel.Dock="Left">全選択</Button>
            <Button DockPanel.Dock="Left" Margin="3,0,0,0">全解除</Button>
            <Button Command="{Binding CancelCommand}" DockPanel.Dock="Right">キャンセル</Button>
            <Button Command="{Binding OkCommand}" DockPanel.Dock="Right" Margin="0,0,3,0">OK</Button>
            <Label/>
        </DockPanel>
        <ListView MinHeight="300" MinWidth="500" Margin="3"/>
    </DockPanel>
</UserControl>
